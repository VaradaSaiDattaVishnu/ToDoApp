{
    "version": 2,
    "rewrites": [
      {
        "source": "/getTasks",
        "destination": "/server/server.js"
      },
      {
        "source": "/updateTask",
        "destination": "/server/server.js"
      },
      {
        "source": "/saveTask",
        "destination": "/server/server.js"
      },
      {
        "source": "/updateTasksInDb",
        "destination": "/server/server.js"
      },
      {
        "source": "/deleteTask",
        "destination": "/server/server.js"
      }
    ],
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/build" }
      }
    ]
  }
  